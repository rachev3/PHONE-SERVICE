<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - ТЕЛЕФОНЕН СЕРВИЗ</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/PHONE_SERVICE.styles.css" asp-append-version="true" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.3/css/all.min.css">
    <style>

        .navbar-brand img {
            max-height: 70px;
            width: auto;
        }

        .navbar-nav .nav-link {
            display: flex;
            flex-direction: column;
            align-items: center;
            gap: 0.25rem;
            padding: 0.75rem 1.5rem;
            font-size: 1.1rem;
        }
    </style>
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-md navbar-light bg-light">
            <div class="container-fluid">
                <a class="navbar-brand" asp-controller="Home" asp-action="Index">
                    <img src="~/images/Phone Service.png" alt="Вашето Лого" />
                </a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>

                <div class="collapse navbar-collapse justify-content-center" id="navbarNav">
                    <ul class="navbar-nav">
                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-controller="Home" asp-action="Index">
                                <i class="fas fa-home fa-lg"></i>
                                Начало
                            </a>
                        </li>

                        @if (User.IsInRole("Worker") || User.IsInRole("Admin"))
                        {
                            <li class="nav-item">
                                <a class="nav-link" asp-area="" asp-controller="RepairRequest" asp-action="Index">
                                    <i class="fas fa-tools fa-lg"></i> Заявки
                                </a>
                            </li>
                        }

                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-controller="PhoneModel" asp-action="Index">
                                <i class="fas fa-mobile-alt fa-lg"></i>
                                Модели Телефони
                            </a>
                        </li>

                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-controller="Repair" asp-action="Index">
                                <i class="fas fa-wrench fa-lg"></i>
                                Ремонти
                            </a>
                        </li>

                        @if (User.IsInRole("Worker"))
                        {
                            <li class="nav-item">
                                <a class="nav-link" asp-area="" asp-controller="RepairRequest" asp-action="WorkerRepairRequests">
                                    <i class="fas fa-cogs fa-lg"></i> Моите заявки
                                </a>
                            </li>
                        }
                        @if (User.IsInRole("Client"))
                        {
                            <li class="nav-item">
                                <a class="nav-link" asp-area="" asp-controller="RepairRequest" asp-action="ClientRepairRequests">
                                    <i class="fas fa-wrench fa-lg"></i> Моите заявки
                                </a>
                            </li>
                        }
                        @if (User.IsInRole("Admin"))
                        {
                            <li class="nav-item">
                                <a class="nav-link" asp-area="" asp-controller="User" asp-action="Dashboard">
                                    <i class="fas fa-tachometer-alt fa-lg"></i> Административен Панел
                                </a>
                            </li>
                        }
                    </ul>
                </div>
                <div class="navbar-nav ms-auto">
                    <partial name="_LoginPartial" />
                </div>
            </div>
        </nav>
    </header>

    <div class="container mt-4">
        <main role="main">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted mt-4">
        <div class="container">
            <div class="row">
                <div class="col-lg-6">
                    <p class="text-center text-lg-start">&copy; 2023 - ТЕЛЕФОНЕН СЕРВИЗ</p>
                </div>
                <div class="col-lg-6">
                    <ul class="list-inline list-unstyled text-center text-lg-end">
                        <li class="list-inline-item"><a asp-area="" asp-controller="Home" asp-action="Privacy" class="text-decoration-none text-muted">Поверителност</a></li>
                    </ul>
                </div>
            </div>
        </div>
    </footer>


    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
