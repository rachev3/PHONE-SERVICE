@model RepairRequestCreateViewModel

<h2>Edit RepairRequest</h2>
<form asp-action="Edit">
    <div class="mb-2">
        <label asp-for="RepairRequestType" class="form-label">Repair Request Type</label>
        <select asp-for="RepairRequestType" class="form-select">
            <option value="">Select Type</option>
            @foreach (var value in Enum.GetValues(typeof(PHONE_SERVICE.Data.Enums.RepairRequestType)))
            {
                <option value="@value">@value</option>
            }
        </select>
        <span asp-validation-for="RepairRequestType" class="text-danger"></span>
    </div>
    <div class="mb-2">
        <label asp-for="Date" class="form-label">Date</label>
        <input asp-for="Date" class="form-control" />
    </div>
    <div class="mb-2">
        <label asp-for="RepairType" class="form-label">Repair Type</label>
        <select asp-for="RepairType" class="form-select">
            <option value="">Select Type</option>
            @foreach (var value in Enum.GetValues(typeof(PHONE_SERVICE.Data.Enums.RepairType)))
            {
                <option value="@value">@value</option>
            }
        </select>
        <span asp-validation-for="RepairType" class="text-danger"></span>
    </div>
    <div class="mb-2">
        <label asp-for="PhoneModelId" class="form-label">Phone Model</label>
        <select asp-for="PhoneModelId" class="form-select">
            <option value="">Select Type</option>
            @foreach (var value in Model.PhoneModels)
            {
                <option value="@value.PhoneModelId">@value.PhoneBrand @value.Name</option>
            }
        </select>
        <span asp-validation-for="PhoneModelId" class="text-danger"></span>
    </div>
    <div class="mb-2">
        <label asp-for="Descripion" class="form-label">Description</label>
        <input asp-for="Descripion" class="form-control" />
    </div>
    <div class="mb-2">
        <label asp-for="Status" class="form-label">Status</label>
        <select asp-for="Status" class="form-select">
            <option value="">Select Type</option>
            @foreach (var value in Enum.GetValues(typeof(PHONE_SERVICE.Data.Enums.RepairRequestStatus)))
            {
                <option value="@value">@value</option>
            }
        </select>
        <span asp-validation-for="Status" class="text-danger"></span>
    </div>
    <div class="mb-2">
        <label asp-for="Rating" class="form-label">Rating</label>
        <input asp-for="Rating" class="form-control" />
    </div>
    <div class="mb-2">
        <label asp-for="Price" class="form-label">Price</label>
        <input asp-for="Price" class="form-control" />
    </div>
    <input type="hidden" asp-for="RepairRequestId" />
    <button type="submit" class="btn btn-primary" asp-controller="RepairRequest">Update</button>
</form>
