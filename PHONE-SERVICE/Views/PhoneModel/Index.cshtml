@model PHONE_SERVICE.Models.PhoneModelModels.PhoneModelPageViewModel

<h2>PhoneModel List</h2>
<table class="table">
    <thead>
        <tr>
            <th>Name</th>
            <th>PhoneBrand</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var phoneModel in Model.PhoneModels)
        {
            <tr>
                <td>@phoneModel.Name</td>
                <td>@phoneModel.PhoneBrand</td>

                @if (User.IsInRole("Admin"))
                {
                    <td>
                        <a asp-action="Edit" asp-route-id="@phoneModel.PhoneModelId" class="btn btn-primary">Edit</a>
                        <form asp-action="Delete" asp-route-id="@phoneModel.PhoneModelId" method="post"
                              onsubmit="return confirm('Are you sure you want to delete this PhoneModel?');">
                            <button type="submit" class="btn btn-danger">Delete</button>
                        </form>
                    </td>
                }
            </tr>
        }
    </tbody>
</table>

<a asp-action="Create" asp-controller="PhoneModel" class="btn btn-success">Add New PhoneModel</a>
