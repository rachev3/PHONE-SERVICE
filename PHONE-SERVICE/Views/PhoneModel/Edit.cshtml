@model PhoneModelViewModel 

<h2>Edit Actor</h2>
<form asp-action="Edit">
    <div class="form-control">
        <label asp-for="Name" class="form-label"></label>
        <input asp-for="Name" class="form-control" />
    </div>
    <div class="form-control">
        <label asp-for="PhoneBrand" class="control-label"></label>
        <select asp-for="PhoneBrand" class="form-control">
            <option value="">Select Type</option>
            @foreach (var value in Enum.GetValues(typeof(PHONE_SERVICE.Data.Enums.PhoneBrand)))
            {
                <option value="@value">@value</option>
            }
        </select>
        <span asp-validation-for="PhoneBrand" class="text-danger"></span>
    </div>
    <input type="hidden" asp-for="PhoneModelId" />
    <button type="submit" class="btn btn-primary" asp-controller="PhoneModel">Update</button>
</form>
