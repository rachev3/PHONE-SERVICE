@model HomePageViewModel
@{
    ViewData["Title"] = "Начало";
}
<style>

    img {
        max-height: 150px;
        width: auto;
    }
</style>

<section class="hero-section text-center py-5">
    <div class="container">
        <h1 class="display-4">Добре дошли в<br>Phone Servie PMG</h1>
        <p class="lead">Сервиз за поправка на телефони.</p>

    </div>
</section>

<section class="services-section bg-light py-5">
    <div class="container">
        <h2 class="text-center mb-4">Предлагани услуги</h2>
        <div class="row text-center">
            <div class="col-md-6 mx-auto">
                <div class="row">
                    <div class="col-md-12">
                        <h3 class="">Смяна на дисплей</h3>
                        <img src="~/images/screen.jpg" alt="" style="border-radius: 10%;" />
                        <p class="mt-2">Проверете дали е възможна поправката за вашия телефон:</p>
                        <div class="dropdown">
                            <button class="btn btn-secondary dropdown-toggle" type="button" id="dropdownMenuButton1" data-bs-toggle="dropdown" aria-expanded="false">
                                Телефони
                            </button>
                            <ul class="dropdown-menu" aria-labelledby="dropdownMenuButton1">
                                @foreach (var repair in Model.DisplayChange)
                                {
                                    <li><a class="dropdown-item">@repair.PhoneModel.PhoneBrand @repair.PhoneModel.Name</a></li>
                                }
                            </ul>
                        </div>
                    </div>
                    <div class="col-md-12 mt-4">
                        <h3>Смяна на протектор</h3>
                        <img src="~/images/protector.jpg" alt="" style="border-radius: 10%;" />
                        <p class="mt-2">Проверете дали е възможна поправката за вашия телефон:</p>
                        <div class="dropdown">
                            <button class="btn btn-secondary dropdown-toggle" type="button" id="dropdownMenuButton1" data-bs-toggle="dropdown" aria-expanded="false">
                                Телефони
                            </button>
                            <ul class="dropdown-menu" aria-labelledby="dropdownMenuButton1">
                                @foreach (var repair in Model.ProtectorChange)
                                {
                                    <li><a class="dropdown-item">@repair.PhoneModel.PhoneBrand @repair.PhoneModel.Name</a></li>
                                }
                            </ul>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-md-6 mx-auto">
                <div class="row">
                    <div class="col-md-12">
                        <h3>Смяна на батерия</h3>
                        <img src="~/images/battery.jpg" alt="" style="border-radius: 10%;" />
                        <p class="mt-2">Проверете дали е възможна поправката за вашия телефон:</p>
                        <div class="dropdown">
                            <button class="btn btn-secondary dropdown-toggle" type="button" id="dropdownMenuButton1" data-bs-toggle="dropdown" aria-expanded="false">
                                Телефони
                            </button>
                            <ul class="dropdown-menu" aria-labelledby="dropdownMenuButton1">
                                @foreach (var repair in Model.BatteryChange)
                                {
                                    <li><a class="dropdown-item">@repair.PhoneModel.PhoneBrand @repair.PhoneModel.Name</a></li>
                                }
                            </ul>
                        </div>
                    </div>
                    <div class="col-md-12 mt-4">
                        <h3>Декодиране</h3>
                        <img src="~/images/decode.jpg" alt="" style="border-radius: 10%;" />
                        <p class="mt-2">Проверете дали е възможна поправката за вашия телефон:</p>
                        <div class="dropdown">
                            <button class="btn btn-secondary dropdown-toggle" type="button" id="dropdownMenuButton1" data-bs-toggle="dropdown" aria-expanded="false">
                                Телефони
                            </button>
                            <ul class="dropdown-menu" aria-labelledby="dropdownMenuButton1">
                                @foreach (var repair in Model.Decode)
                                {
                                    <li><a class="dropdown-item">@repair.PhoneModel.PhoneBrand @repair.PhoneModel.Name</a></li>
                                }
                            </ul>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

<section class="p-5  text-center">
    <div class="container">
        <h2 class="display-4 mb-4">Направи поправка на своя телефон сега!</h2>
        <p class="lead mb-4">Регистрирай се за да получиш достъп до пълната версия на сайта. <br />Свържи се с наш служител и направи заявка за поправка на твоят телефон.</p>
        @if (!User.Identity.IsAuthenticated)
        {
            <a class="btn btn-primary btn-lg" asp-controller="User" asp-action="Register">Регистрирай се сега</a>
        }
    </div>
</section>

<section class="about-section bg-light py-5">
    <div class="container">
        <h2 class="text-center mb-4">За нас</h2>
        <p>Phone Service PMG е вашето надеждно място за поправка на телефони. Нашата цел е да предоставим висококачествено обслужване на нашите клиенти, осигурявайки бързи и ефективни решения за всякакви проблеми с техните устройства.</p>
        <p>С нашите квалифицирани техници и богат опит в сферата на телефонните ремонти, можем да се справим с всякакви изисквания за поддръжка и поправка на вашите телефони.</p>
    </div>
    </div>
</section>

<section class="feedback-section py-5">
    <div class="container">
        <h2 class="text-center mb-4">Оценки на нашите клиенти</h2>
        @{
            var count = 0;
        }

        @foreach (var client in Model.Rated)
        {
            if (count >= 4)
            {
                break;
            }

            <div class="row">
                <div class="col-md-12">
                    <div class="feedback-item">
                        <h3>@client.ClientUser.FirstName @client.ClientUser.LastName</h3>
                        <p>@client.RepairType на @client.PhoneModel.PhoneBrand @client.PhoneModel.Name.  Оценка: @client.Rating/10</p>
                    </div>
                </div>
            </div>

            count++;
        }
    </div>
</section>
